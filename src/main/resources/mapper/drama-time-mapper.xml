    <!-- findDatesByDramaId --> 
    <select id="findDatesByDramaId" parameterType="Long" resultType="com.chbb.theaketing.feature.drama.dto.DramaDateTimeDto$DramaDate">
        SELECT      show_date
        FROM        show_times
        GROUP BY    show_date
        HAVING      drama_id = #{id}
    </select>
    
